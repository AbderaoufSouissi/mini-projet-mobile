<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.SmartExpense"
        tools:targetApi="31">

        <!-- Splash Screen -->
        <activity
            android:name=".view.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.SmartExpense.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Authentication Activities -->
        <activity
            android:name=".view.LoginActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name=".view.SignupActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name=".view.ResetPasswordActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />

        <!-- Main App Activities -->
        <activity
            android:name=".view.DashboardActivity"
            android:exported="false" />

        <activity
            android:name=".view.AddExpenseActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name=".view.ExpenseListActivity"
            android:exported="false" />

        <activity
            android:name=".view.StatisticsActivity"
            android:exported="false" />

    </application>

</manifest>

